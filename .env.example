DATABASE_URL="postgresql://USER:PASSWORD@HOST:5432/applaid"

TAVILY_API_KEY="your-tavily-api-key"
YUTORI_API_KEY="your-yutori-api-key"
GMAIL_MCP_KEY="your-gmail-mcp-key"

# Optional: log each discovered lead (title, url, score) in worker logs
# DISCOVER_DEBUG_LEADS="true"

# ApplyRunner configuration
# APPLY_SAFE_MODE="true"              # Unset or "false" = fill and submit. "true" = prefill only, do not submit
APPLY_MAX_RETRIES="3"                 # Max retry attempts for transient failures
APPLY_BASE_DELAY_MS="1000"            # Base delay for exponential backoff (ms)
APPLY_MAX_DELAY_MS="30000"            # Maximum backoff delay cap (ms)
APPLY_DOMAIN_THROTTLE_MS="5000"       # Min interval between requests to same ATS domain (ms)

# Optional: environment for Next.js
NEXT_PUBLIC_APP_NAME="applaid"

# Demo: trigger worker from dashboard (run worker with WORKER_TRIGGER_PORT=3199)
# WORKER_TRIGGER_URL="http://localhost:3199"
